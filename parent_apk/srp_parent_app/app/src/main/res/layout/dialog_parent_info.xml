<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_parent_info"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minWidth="200dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="30dp"
    android:paddingTop="30dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:layout_gravity="center_horizontal"
        android:minHeight="40dp"
        android:text="家长信息完善"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/dialog_parent_name_edit"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="家长姓名"
            android:minHeight="45dp"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/dialog_parent_sex_edit"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="家长性别"
            android:layout_marginLeft="10dp"
            android:minHeight="45dp"
            android:textStyle="bold"
            android:textSize="18sp" />

    </LinearLayout>


    <EditText
        android:id="@+id/dialog_parent_phone_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="top|left"
        android:hint="家长手机号"
        android:minHeight="40dp"
        android:inputType="phone"
        android:textStyle="bold"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:layout_gravity="center_horizontal"
        android:minHeight="40dp"
        android:text="学生信息完善"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/dialog_student_name_edit"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="学生姓名"
            android:minHeight="45dp"
            android:textStyle="bold"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/dialog_student_sex_edit"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="学生性别"
            android:layout_marginLeft="10dp"
            android:minHeight="45dp"
            android:textStyle="bold"
            android:textSize="18sp" />

    </LinearLayout>
    <EditText
        android:id="@+id/dialog_student_pswd_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="top|left"
        android:hint="学生密码"
        android:minHeight="40dp"
        android:inputType="phone"
        android:textStyle="bold"
        android:textSize="18dp" />


</LinearLayout>

